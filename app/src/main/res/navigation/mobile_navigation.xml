<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_create">

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.example.householdbudgetapp.ui.create.CreateFragment"
        android:label="@string/title_create"
        tools:layout="@layout/fragment_create" />

    <fragment
        android:id="@+id/navigation_confirm"
        android:name="com.example.householdbudgetapp.ui.confirm.ConfirmFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_confirm" />

    <fragment
        android:id="@+id/navigation_calc"
        android:name="com.example.householdbudgetapp.ui.calc.CalcFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_calc" />

    <fragment
        android:id="@+id/navigation_note"
        android:name="com.example.householdbudgetapp.ui.note.NoteFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_note" />
</navigation>